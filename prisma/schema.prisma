generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    previewFeatures      = ["driverAdapters"]
    recursive_type_depth = -1
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserEnum {
    ADMIN
    EMPOLYEE
    NORMAL

    @@map("user_enums")
}

model User {
    id         String    @id @default(uuid())
    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
    uid        String    @unique
    pwd        String
    email      String
    role       UserEnum
    profile    Profile?
    user       Session[]

    @@map("users")
}

model Profile {
    id         Int      @id @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    name        String
    age         Int
    description String

    user_id String @unique
    user    User   @relation(fields: [user_id], references: [id])

    @@map("profiles")
}

model Session {
    id        String   @id
    user_id   String
    expire_at DateTime

    user User @relation(references: [id], fields: [user_id])

    @@map("sessions")
}
